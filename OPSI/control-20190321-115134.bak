[Package]
version: 2
depends: 

[Product]
type: localboot
id: config-win-base
name: Windows Customizing
description: Anpassung von Windows XP / Vista / Win7 Einstellungen
advice: 
version: 4.0.1
priority: 0
licenseRequired: False
productClasses: 
